<div class="container">
    <div class="jumbotron mt-5">
        <h1 class="display-4 text-center">Eat the Burger</h1>
        <div class="row">
            <div id="devoured" class="col-md-6">
                <h2 class="text-center">Burger Menu</h2>
                <ul class="list">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burgers-block devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div id="notDevoured" class="col-md-6">
                <h2 class="text-center">Devoured Burgers</h2>
                <ul class="list">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burgers-block devoured=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        {{> burgers/add-burger}}
    </div>
</div>